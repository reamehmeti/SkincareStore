@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="background-color: rgba(235, 187, 183, 0.03); overflow: hidden">
    <section>
        <div class="row align-items-center justify-content-center justify-content-lg-between">
            <div class="col-lg-6 order-lg-2 p-0">
                <img class="img-fluid" src="~/Content/assets/img/about-1.png" alt="">
            </div>
