@model SkincareStore.Models.Contact

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5 mb-lg-0">
            <div class="contact-form">
                <h5 class="font-weight-medium ml-1 mb-4">Contact Us</h5>
                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { id = "contactUsForm" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="control-group mb-3">
                        <div class="d-flex">
                            @Html.LabelFor(model => model.Name, new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-error" })
                        </div>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required" } })
                    </div>
                    <div class="control-group mb-3">
                        <div class="d-flex">
                            @Html.LabelFor(model => model.Email, new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-error" })
                        </div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required" } })
                    </div>
                    <div class="control-group mb-3">
                        <div class="d-flex">
                            @Html.LabelFor(model => model.Subject, new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-error" })
                        </div>
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required" } })
                    </div>
                    <div class="control-group mb-4">
                        <div class="d-flex">
                            @Html.LabelFor(model => model.Message, new { @class = "form-label" })
                            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-error" })
                        </div>
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control", @placeholder = "Required" } })
                    </div>
                    <div>
                        <button class="btn btn-primary px-3" id="sendMessage" type="button">
                            <i class="fa fa-paper-plane mr-2"></i>Send Message
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-5">
            <div class="d-flex flex-column mb-3">
                <h5 class="font-weight-medium mb-3">Store Details</h5>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Pristina, Prishtinë, Kosova</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>skinseoul@outlook.com</p>
                <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+383 44 123 456</p>
            </div>
            <div class="map-container">
                <h5 class="font-weight-medium mb-3">Location</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2970.564025907957!2d21.165506615052357!3d42.66298997913189!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1355b1c4b9a53f45%3A0x405c3f0bc405cd99!2sPristina!5e0!3m2!1sen!2s!4v1633101876581!5m2!1sen!2s"
                        width="100%"
                        height="250"
                        style="border:0"
                        allowfullscreen=""
                        loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
<script>
    $(".navbar-nav").eq(1).find("a").eq(4).addClass("active");
    $('.form-control').css('border-radius', '9px');
</script>